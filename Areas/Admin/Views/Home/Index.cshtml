@{
    ViewData["Title"] = "Admin Home - Print Service";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar shadow-sm">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active text-primary" aria-current="page" href="#">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-printer"></i> Print Jobs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-person-circle"></i> Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-gear"></i> Settings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="#">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <h1 class="text-center mt-4 mb-5">Admin Dashboard</h1>

            <!-- Dashboard Summary Cards -->
            <div class="row text-center mb-4">
                <div class="col-md-3">
                    <div class="card text-white bg-primary shadow-sm">
                        <div class="card-header">Total Print Jobs</div>
                        <div class="card-body">
                            <h3 class="card-title">100</h3>
                            <p class="card-text">Total print jobs processed.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-success shadow-sm">
                        <div class="card-header">Completed Print Jobs</div>
                        <div class="card-body">
                            <h3 class="card-title">80</h3>
                            <p class="card-text">Completed print jobs.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-warning shadow-sm">
                        <div class="card-header">Pending Print Jobs</div>
                        <div class="card-body">
                            <h3 class="card-title">10</h3>
                            <p class="card-text">Print jobs pending.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-danger shadow-sm">
                        <div class="card-header">Failed Print Jobs</div>
                        <div class="card-body">
                            <h3 class="card-title">5</h3>
                            <p class="card-text">Print jobs that failed.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Print Jobs Table -->
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Recent Print Jobs</h5>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-bordered">
                        <thead class="thead-light">
                            <tr class="text-center">
                                <th>Job ID</th>
                                <th>File Name</th>
                                <th>Status</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-center">1</td>
                                <td>Document1.pdf</td>
                                <td class="text-success">Completed</td>
                                <td>2024-12-09 09:00 AM</td>
                                <td>2024-12-09 09:30 AM</td>
                                <td class="text-center">
                                    <a href="#" class="btn btn-info btn-sm mx-1">Details</a>
                                    <a href="#" class="btn btn-warning btn-sm mx-1">Edit</a>
                                    <a href="#" class="btn btn-danger btn-sm mx-1">Delete</a>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center">2</td>
                                <td>Document2.pdf</td>
                                <td class="text-warning">Pending</td>
                                <td>2024-12-09 10:00 AM</td>
                                <td>N/A</td>
                                <td class="text-center">
                                    <a href="#" class="btn btn-info btn-sm mx-1">Details</a>
                                    <a href="#" class="btn btn-warning btn-sm mx-1">Edit</a>
                                    <a href="#" class="btn btn-danger btn-sm mx-1">Delete</a>
                                </td>
                            </tr>
                            <!-- Add more rows as needed -->
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</div>
