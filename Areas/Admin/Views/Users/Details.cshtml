@model HCMSIU_SSPS.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h1 class="text-center mt-4">User Details</h1>

<div class="container mt-4">
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h5 class="mb-0 fw-bold">Details of User</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <!-- UserName -->
                        <dt class="col-sm-4 fw-bold">Username</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>

                        <!-- Email -->
                        <dt class="col-sm-4 fw-bold">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <!-- Password -->
                        <dt class="col-sm-4 fw-bold">Password</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>

                        <!-- Role -->
                        <dt class="col-sm-4 fw-bold">Role</dt>
                        <dd class="col-sm-8">
                            @(Model.Role == 1 ? "Admin" : "User")
                        </dd>

                        <!-- PageBalance -->
                        <dt class="col-sm-4 fw-bold">Page Balance</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PageBalance)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-warning mx-2">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
