@model HCMSIU_SSPS.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h1 class="text-center mt-4 text-danger">Delete User</h1>

<div class="container mt-4">
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h5 class="mb-0 fw-bold">Are you sure you want to delete this user?</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <!-- UserName -->
                        <dt class="col-sm-4 fw-bold">Username</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>

                        <!-- Email -->
                        <dt class="col-sm-4 fw-bold">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <!-- Password -->
                        <dt class="col-sm-4 fw-bold">Password</dt>
                        <dd class="col-sm-8">
                            <span class="text-muted">****** (hidden for security)</span>
                        </dd>

                        <!-- Role -->
                        <dt class="col-sm-4 fw-bold">Role</dt>
                        <dd class="col-sm-8">
                            @(Model.Role == 1 ? "<span class='badge bg-success'>Admin</span>" : "<span class='badge bg-secondary'>User</span>")
                        </dd>

                        <!-- PageBalance -->
                        <dt class="col-sm-4 fw-bold">Page Balance</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PageBalance)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="UserId" />
                        <input type="submit" value="Delete" class="btn btn-danger mx-2" />
                    </form>
                    <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
