@model HCMSIU_SSPS.Models.User

@{
    ViewData["Title"] = "Create User";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Thêm Tài Khoản Mới</h1>
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Lỗi:</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Thành công:</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-lg">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Nhập Thông Tin Tài Khoản</h4>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>


                <!-- FullName -->
                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label fw-bold">Tên Đầy Đủ</label>
                    <input asp-for="FullName" class="form-control" placeholder="Nhập Tên Đầy Đủ" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <!-- Username -->
                <div class="form-group mb-3">
                    <label asp-for="UserName" class="form-label fw-bold">Tên Tài Khoản</label>
                    <input asp-for="UserName" class="form-control" placeholder="Nhập Tên Tài Khoản" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Nhập Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password, không cho phép null ở đây -->
                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label fw-bold">Mật Khẩu</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Nhập Mật Khẩu" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Role -->
                <div class="form-group mb-3">
                    <label asp-for="Role" class="form-label fw-bold">Quản Trị</label>
                    <select asp-for="Role" class="form-select">
                        <option value="">Select Role</option>
                        <option value="1">Admin</option>
                        <option value="0">User</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-5">Tạo Mới</button>
                    <a asp-action="Index" class="btn btn-secondary px-5 ms-3">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Viết modal pop up với ajax tương ứng để hiển thị thông báo email hoặc tài khoản đã tồn tại-->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
