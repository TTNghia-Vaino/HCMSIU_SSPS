<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HCMSIU_SSPS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HCMSIU_SSPS.styles.css" asp-append-version="true" />
    <!-- Thêm CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Thêm JS Bootstrap và Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>


    <style>
        /* Tăng tính thẩm mỹ cho sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: -250px; /* Ẩn sidebar mặc định */
            width: 250px;
            height: 100%;
            background-color: #343a40;
            color: white;
            transition: transform 0.3s ease-in-out;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }

            .sidebar.active {
                transform: translateX(250px); /* Di chuyển sidebar vào khi mở */
            }

            .sidebar ul {
                list-style-type: none;
                padding: 0;
                margin-top: 50px;
            }

                .sidebar ul li {
                    padding: 15px;
                    text-align: left;
                }

                    .sidebar ul li a {
                        color: white;
                        text-decoration: none;
                        font-size: 18px;
                        display: block;
                    }

                        .sidebar ul li a:hover {
                            background-color: #007bff;
                            border-radius: 5px;
                            padding-left: 20px;
                        }

        /* Nút mở sidebar */
        .toggle-btn {
            font-size: 30px;
            cursor: pointer;
            color: #007bff;
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1000;
        }

        /* Nút đóng sidebar */
        .close-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 25px;
            color: white;
            cursor: pointer;
        }

        /* Bố cục nội dung chính và header */
        .main-content,
        .navbar,
        footer {
            transition: margin-left 0.3s ease-in-out;
        }

            .main-content.active,
            .navbar.active,
            footer.active {
                margin-left: 250px; /* Dịch chuyển nội dung chính, navbar và footer sang phải khi sidebar mở */
            }

        .navbar {
            padding: 10px 30px;
            background-color: #fff;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

            .navbar a {
                color: #333;
                text-decoration: none;
                padding: 10px 15px;
                font-size: 18px;
            }

                .navbar a:hover {
                    background-color: #007bff;
                    color: white;
                    border-radius: 5px;
                }

        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            text-align: center;
            box-shadow: 0px -4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Thêm hiệu ứng hover cho các phần tử */
        .nav-link:hover {
            background-color: #007bff;
            color: white;
            border-radius: 5px;
        }
    </style>
</head>

<body>
    @if (Context.Session.GetString("Role") != "1")
    {
        <script>
            window.location.href = '@Url.Action("Index", "Home", new { area = "" })';
        </script>
    }
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <button class="close-btn" id="closeSidebar">&times;</button>
        <ul>
            <li><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-area="Admin" asp-controller="Printers" asp-action="Index">Printer Management</a></li>
            <li><a asp-area="Admin" asp-controller="Users" asp-action="Index">User Management</a></li>
            <li><a asp-area="Admin" asp-controller="PrintJobs" asp-action="Index">Print History</a></li>
            <li><a asp-area="Admin" asp-controller="SystemSettings" asp-action="Index">System Setting</a></li>
            <li><a asp-area="Admin" asp-controller="Transactions" asp-action="Index">Transactions History</a></li>
        </ul>
    </div>

    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HCMSIU_SSPS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Printers" asp-action="Index">Printer Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Users" asp-action="Index">User Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="PrintJobs" asp-action="Index">Print History</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="SystemSettings" asp-action="Index">System Setting</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Transactions" asp-action="Index">Transactions History</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Nội dung chính -->
    <div class="container-fluid main-content">
        <span class="toggle-btn" id="openSidebar">&#9776;</span>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - HCMSIU_SSPS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // JavaScript để mở/đóng sidebar
        document.getElementById('openSidebar').addEventListener('click', function () {
            document.getElementById('sidebar').classList.toggle('active');
            document.querySelector('.main-content').classList.toggle('active');
            document.querySelector('.navbar').classList.toggle('active');
            document.querySelector('footer').classList.toggle('active');
        });

        document.getElementById('closeSidebar').addEventListener('click', function () {
            document.getElementById('sidebar').classList.remove('active');
            document.querySelector('.main-content').classList.remove('active');
            document.querySelector('.navbar').classList.remove('active');
            document.querySelector('footer').classList.remove('active');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
