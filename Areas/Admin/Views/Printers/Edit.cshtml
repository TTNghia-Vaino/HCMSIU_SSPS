@model HCMSIU_SSPS.Models.Printer

@{
    ViewData["Title"] = "Edit Printer";
}

<h1 class="text-center mt-4">Chỉnh Sửa Máy In</h1>

<div class="container mt-4">
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h5 class="mb-0 fw-bold">Chỉnh Sửa Thông Tin</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                        <input type="hidden" asp-for="PrinterId" />

                        <div class="form-group mb-3">
                            <label asp-for="PrinterName" class="form-label fw-bold">Tên Máy In</label>
                            <input asp-for="PrinterName" class="form-control" placeholder="Enter printer name" />
                            <span asp-validation-for="PrinterName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Brand" class="form-label fw-bold">Loại Máy In</label>
                            <input asp-for="Brand" class="form-control" placeholder="e.g., Canon, HP" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Model" class="form-label fw-bold">Cấu Hình</label>
                            <input asp-for="Model" class="form-control" placeholder="e.g., LaserJet Pro M404" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Location" class="form-label fw-bold">Vị Trí</label>
                            <input asp-for="Location" class="form-control" placeholder="e.g., Room 101" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="IsEnable" class="form-label fw-bold">Hoạt Động</label>
                            <select asp-for="IsEnable" class="form-select">
                                <option value="1">Có</option>
                                <option value="0">Không</option>
                            </select>
                            <span asp-validation-for="IsEnable" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary px-4">Quay Lại</a>
                            <button type="submit" class="btn btn-primary px-4">Lưu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


