@model HCMSIU_SSPS.Models.Printer

@{
    ViewData["Title"] = "Create Printer";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Create New Printer</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-4 text-center">Printer Details</h4>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="PrinterId" class="form-label fw-bold">Printer ID</label>
                    <input asp-for="PrinterId" class="form-control" placeholder="Enter Printer ID" />
                    <span asp-validation-for="PrinterId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PrinterName" class="form-label fw-bold">Printer Name</label>
                    <input asp-for="PrinterName" class="form-control" placeholder="Enter Printer Name" />
                    <span asp-validation-for="PrinterName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Brand" class="form-label fw-bold">Brand</label>
                    <input asp-for="Brand" class="form-control" placeholder="Enter Brand" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Model" class="form-label fw-bold">Model</label>
                    <input asp-for="Model" class="form-control" placeholder="Enter Model" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Location" class="form-label fw-bold">Location</label>
                    <input asp-for="Location" class="form-control" placeholder="Enter Location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">Create</button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-3">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
