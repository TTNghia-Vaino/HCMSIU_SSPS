@model HCMSIU_SSPS.Models.Printer

@{
    ViewData["Title"] = "Thêm máy in mới";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Thêm Máy In Mới</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-4 text-center">Thông tin Máy in</h4>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="PrinterName" class="form-label fw-bold">Tên máy in</label>
                    <input asp-for="PrinterName" class="form-control" placeholder="Nhập tên máy in" />
                    <span asp-validation-for="PrinterName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Brand" class="form-label fw-bold">Hãng</label>
                    <input asp-for="Brand" class="form-control" placeholder="Nhập hãng cung cấp máy in" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Model" class="form-label fw-bold">Mẫu</label>
                    <input asp-for="Model" class="form-control" placeholder="Mẫu máy in (in màu, in trắng đen)" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Location" class="form-label fw-bold">Địa điểm đặt máy in</label>
                    <input asp-for="Location" class="form-control" placeholder="DOA501, LEWIS 201" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">Thêm Máy In</button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-3">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
