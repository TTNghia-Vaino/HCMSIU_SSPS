@model HCMSIU_SSPS.Models.Printer

@{
    ViewData["Title"] = "Delete Printer";
}

<h1 class="text-center mt-4 text-danger">Delete Printer</h1>

<div class="container mt-4">
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h5 class="mb-0 fw-bold">Are you sure you want to delete this printer?</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Printer Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PrinterName)</dd>

                        <dt class="col-sm-4 fw-bold">Brand:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Brand)</dd>

                        <dt class="col-sm-4 fw-bold">Model:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Model)</dd>

                        <dt class="col-sm-4 fw-bold">Location:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Location)</dd>

                        <dt class="col-sm-4 fw-bold">Enabled:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsEnable == 1)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="PrinterId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
