@model IEnumerable<HCMSIU_SSPS.Models.Transaction>

@{
    ViewData["Title"] = "Lịch Sử Giao Dịch";
}

<h1 class="text-center mt-4 mb-5">Lịch Sử Giao Dịch</h1>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="container">
    <div class="mb-4">
        <label for="dateType">Lọc theo:</label>
        <select id="dateType" class="form-control mb-3">
            <option value="day">Ngày</option>
            <option value="month">Tháng</option>
            <option value="year">Năm</option>
        </select>

        <div id="dateFilter">
            <div class="row">
                <div class="col"><label>Từ Ngày:</label><input type="date" id="startDate" class="form-control" /></div>
                <div class="col"><label>Đến Ngày:</label><input type="date" id="endDate" class="form-control" /></div>
            </div>
        </div>
        <div id="monthFilter" class="d-none">
            <label>Chọn Tháng:</label><input type="month" id="month" class="form-control" />
        </div>
        <div id="yearFilter" class="d-none">
            <label>Chọn Năm:</label><input type="number" id="year" class="form-control" min="2000" max="2100" value="@DateTime.Now.Year" />
        </div>

        <button id="filterBtn" class="btn btn-primary mt-3">Lọc</button>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Số Lượng</th>
                    <th>Trạng Thái</th>
                    <th>Nội Dung</th>
                    <th>Thời Gian</th>
                    <th>Tài Khoản</th>
                    <th class="text-center">Cài Đặt</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                        <td data-id="@item.TransactionId" id="status-@item.TransactionId">
                            @(item.Status == 0 ? "Đang xử lý" : (item.Status == 1 ? "Đã xử lý" : "N/A"))
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@item.Timestamp?.ToString("g")</td>
                        <td>@item.User?.UserName</td>
                        <td class="text-center">
                            <button class="btn btn-success btn-sm changeStatusBtn"
                                    data-id="@item.TransactionId"
                                    data-status="@item.Status">
                                Check
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        // 1. Ẩn hiện input lọc (Giữ nguyên logic của bạn)
        $('#dateType').change(function () {
            const type = $(this).val();
            $('#dateFilter, #monthFilter, #yearFilter').addClass('d-none');
            if (type === 'day') $('#dateFilter').removeClass('d-none');
            else if (type === 'month') $('#monthFilter').removeClass('d-none');
            else if (type === 'year') $('#yearFilter').removeClass('d-none');
        });

        // 2. Xử lý sự kiện nút Lọc
        $('#filterBtn').click(function () {
            const type = $('#dateType').val();
            let data = {};

            // Logic lấy dữ liệu (Giữ nguyên logic của bạn)
            if (type === 'day') {
                data = {
                    type: 'day',
                    startDate: $('#startDate').val(),
                    endDate: $('#endDate').val(),
                };
            } else if (type === 'month') {
                const monthVal = $('#month').val();
                if(monthVal){
                    const [year, m] = monthVal.split('-');
                    data = {
                        type: 'month',
                        startDate: `${year}-${m}-01`,
                        endDate: `${year}-${m}-31`, // Controller tự xử lý ngày cuối tháng 31/30/28
                    };
                }
            } else if (type === 'year') {
                const year = $('#year').val();
                data = {
                    type: 'year',
                    startDate: `${year}-01-01`,
                    endDate: `${year}-12-31`,
                };
            }

            // Gửi Ajax
            $.ajax({
                url: '/Admin/Transactions/FilterByDate',
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json',
                success: function (response) {
                    if (response.success) {
                        const tbody = $('#tableBody');
                        tbody.empty(); // Xóa dữ liệu cũ

                        if (response.data.length === 0) {
                            tbody.append('<tr><td colspan="6" class="text-center">Không tìm thấy dữ liệu</td></tr>');
                        } else {
                            // Loop qua JSON trả về và vẽ lại từng dòng <tr>
                            let html = '';
                            $.each(response.data, function (index, item) {
                                // Xử lý text hiển thị trạng thái
                                let statusText = item.status === 0 ? "Đang xử lý" : (item.status === 1 ? "Đã xử lý" : "N/A");

                                html += `
                                    <tr>
                                        <td>${item.amount}</td>
                                        <td data-id="${item.transactionId}" id="status-${item.transactionId}">
                                            ${statusText}
                                        </td>
                                        <td>${item.description || ''}</td>
                                        <td>${item.timestamp}</td>
                                        <td>${item.userName}</td>
                                        <td class="text-center">
                                            <button class="btn btn-success btn-sm changeStatusBtn"
                                                    data-id="${item.transactionId}"
                                                    data-status="${item.status}">
                                                Check
                                            </button>
                                        </td>
                                    </tr>
                                `;
                            });
                            tbody.html(html);
                        }
                    }
                },
                error: function () {
                    alert('Error while filtering data.');
                }
            });
        });

        // 3. Xử lý nút Đổi Trạng Thái (Dùng Event Delegation)
        // Bắt buộc dùng .on('click', 'selector') vì các nút Check mới được tạo ra bởi Ajax
        $(document).on('click', 'button.changeStatusBtn', function () {
            var button = $(this);
            var transactionId = button.data('id');
            var currentStatus = button.data('status');
            var newStatus = currentStatus === 0 ? 1 : 0;

            $.ajax({
                url: '/Admin/Transactions/ChangeStatus',
                type: 'POST',
                data: {
                    id: transactionId,
                    status: currentStatus
                },
                success: function (data) {
                    if (data.success) {
                        var statusText = (newStatus === 0) ? 'Đang xử lý' : 'Đã xử lý';
                        $('#status-' + transactionId).text(statusText);
                        button.data('status', newStatus);
                    } else {
                        alert('Error: ' + data.message);
                    }
                },
                error: function () {
                    alert('An error occurred while changing status.');
                }
            });
        });
    });
</script>