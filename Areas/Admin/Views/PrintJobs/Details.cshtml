@model HCMSIU_SSPS.Models.PrintJob

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center mt-4">Print Job Details</h1>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Print Job Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">File Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FileName)</dd>

                <dt class="col-sm-3">Page Count</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PageCount)</dd>

                <dt class="col-sm-3">Total Pages</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalPages)</dd>

                <dt class="col-sm-3">Copies</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Copies)</dd>

                <dt class="col-sm-3">Is Double-Sided</dt>
                <dd class="col-sm-9">
                    @(Model.IsDoubleSided.HasValue
                        ? (Model.IsDoubleSided.Value ? "Yes" : "No")
                        : "Not Specified")
                </dd>

                <dt class="col-sm-3">Start Time</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.StartTime)</dd>

                <dt class="col-sm-3">End Time</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EndTime)</dd>

                <dt class="col-sm-3">Printer</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Printer.PrinterId)</dd>

                <dt class="col-sm-3">User</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.User.UserName)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model?.PrintJobId" class="btn btn-warning me-2">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
