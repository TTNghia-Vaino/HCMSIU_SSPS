@model HCMSIU_SSPS.Models.SystemSetting

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mt-4">Chỉnh Sửa Chi Tiết</h1>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Chi Tiết Chức Năng</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SettingId" />

                <div class="form-group mb-3">
                    <label asp-for="SettingKey" class="form-label">Tên Chức Năng</label>
                    <input asp-for="SettingKey" class="form-control" />
                    <span asp-validation-for="SettingKey" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SettingValue" class="form-label">Giá Trị</label>
                    <input asp-for="SettingValue" class="form-control" />
                    <span asp-validation-for="SettingValue" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
