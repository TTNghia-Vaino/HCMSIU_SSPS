@model IEnumerable<HCMSIU_SSPS.Models.Transaction>

@{
    ViewData["Title"] = "Transaction List";
}

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <h1 class="text-center">Lịch Sử Giao Dịch
            <hr />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col text-right">
            <a asp-action="Create" class="btn btn-success">Mua Thêm Trang In</a>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Quay Lại</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Số Lượng</th>
                        <th>Trạng Thái</th>
                        <th>Giao Dịch</th>
                        <th>Thời Gian</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                            <td data-id="@item.Status">
                                @(item.Status == 0 ? "Đang xử lý" : (item.Status == 1 ? "Đã xử lý" : "N/A"))
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.Timestamp)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
