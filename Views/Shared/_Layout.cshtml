<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HCMSIU_SSPS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HCMSIU_SSPS.styles.css" asp-append-version="true" />
    <!-- Thêm CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Thêm JS Bootstrap và Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

    <!-- Custom CSS -->
    <style>
        .header {
            background-color: #07689f;
            color: white;
            padding: 20px 0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .header .logo {
            max-height: 60px;
        }
        .header .title {
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
        }
        .header .subtitle {
            font-size: 1rem;
            margin-top: -5px;
            color: white;
        }
        .footer {
            background-color: #07689f;
            color: white;
            padding: 20px 0;
            border-top: 1px solid #e7e7e7;
        }
        .footer a {
            color: white;
            text-decoration: none;
        }
        .footer a:hover {
            text-decoration: underline;
        }
        .footer .footer-text {
            color: white;
            text-align: center;
            margin-bottom: -35px; 
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <img src="~/uploads/logo1.png" alt="Logo"
                     style="width: 100px; height: 100px;"
                     class="me-3">
                <div>
                    <h1 class="title mb-0">Smart Print Services</h1>
                    <p class="subtitle mb-0">Your intelligent printing solution</p>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container text-center">
            <div class="footer-text">
                &copy; 2025 - HCMSIU_SSPS - Trường Đại học Quốc tế Sài Gòn
            </div>
            <div class="footer-text">
                Design by Bach Xuan Canh
            </div>
            <div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
